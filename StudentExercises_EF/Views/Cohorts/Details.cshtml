@model StudentExercises_EF.Models.Cohort

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cohort</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructors)
        </dt>
        @foreach (Instructor item in Model.Instructors)
        {
            <dd class="col-sm-2">
                @item.FirstName @item.LastName
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Students)
        </dt>
        @foreach (Student item in Model.Students)
        {
            <dd class="col-sm-2">
                @item.FirstName @item.LastName
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
